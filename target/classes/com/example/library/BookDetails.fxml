<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" prefHeight="319.0" prefWidth="653.0" spacing="20" style="-fx-padding: 10; -fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.controllers.BookDetailsController">
  <VBox alignment="CENTER" prefHeight="363.0" prefWidth="181.0" spacing="10">
    <ImageView fx:id="bookCover" fitHeight="283.0" fitWidth="186.0" preserveRatio="true" style="-fx-border-color: lightgray; -fx-border-radius: 5;">
         <effect>
            <DropShadow height="26.86" radius="13.6625" width="29.79" />
         </effect></ImageView>
  </VBox>
  <VBox alignment="TOP_LEFT" prefWidth="400" spacing="10">
    <Label fx:id="bookTitle" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Tiêu đề" />
    <Label fx:id="bookAuthors" text="Tác giả" />
    <Label fx:id="bookLanguage" text="Ngôn ngữ" />
    <Label fx:id="bookCategories" text="Thể loại" />
    <Label fx:id="bookPublishedDate" text="Ngày xuất bản" />
    <Label fx:id="bookPageCount" text="Số trang" />
    <TextArea fx:id="bookDescription" editable="false" prefHeight="125.0" prefWidth="400.0" style="-fx-control-inner-background: #d1f1fe; -fx-control-inner-background-radius: 20;" wrapText="true" />
  </VBox>
</HBox>
